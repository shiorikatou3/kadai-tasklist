<!-- ログインしてない時 -->

<h1>Welcome to the Tasklist</h1>
<%= link_to "Sign up now!", signup_path %>


<!-- ログインした場合 -->
<h1>タスク一覧</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.id, task %> : <%= task.content %> &gt; <%= task.status %></li>
  <% end %>
</ul>
<%= paginate @tasks %>

<%= link_to "新規タスクの作成", new_task_path %>